@model HomeVM

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

<table class="table">
    <h1>Employees</h1>
    <tr>
        <th>Name</th>
        <th>Surname</th>
        <th>Age</th>
        <th>Salary</th>
    </tr>
    @foreach (var item in Model.Employees)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Age</td>
            <td>@item.Salary</td>
        </tr>
    }
</table>
<table class="table">
    <h1>Users</h1>
    <tr>
        <th>FullName</th>
        <th>Email</th>
        <th>Address</th>
        <th>Age</th>
    </tr>
    @foreach (var item in Model.Users)
    {
        <tr>
            <td>@item.FullName</td>
            <td>@item.Email</td>
            <td>@item.Address</td>
            <td>@item.Age</td>
        </tr>
    }
</table>
<table class="table">
    <h1>Books</h1>
    <tr>
        <th>Name</th>
       
    </tr>
    @foreach (var item in Model.Books)
    {
        <tr>
            <td>@item.Name</td>
        
        </tr>
    }
</table>
<table class="table">
    <h1>Products</h1>
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Count</th>
        <th>Description</th>
    </tr>
    @foreach (var item in Model.Products)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Count</td>
            <td>@item.Description</td>
        </tr>
    }
</table>
